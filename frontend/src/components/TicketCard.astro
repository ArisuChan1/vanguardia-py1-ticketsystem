---
import type Ticket from "../types/ticket";
interface Props {
  ticket: Ticket;
}

const {
  ticket: {
    assignedTo,
    createdBy,
    description,
    principalImage,
    priority,
    status,
    title,
  },
} = Astro.props;
---

<article
  class="rounded-lg shadow bg-gray-800 border-gray-700 hover:bg-gray-700 hover:scale-110 hover:rotate-2 transition-all duration-300 ease-in-out cursor-pointer transform hover:shadow-2xl hover:border-gray-600 border-2 border-transparent p-3"
>
  <img
    class="w-full rounded-t-lg max-h-40 object-cover"
    src={principalImage}
    alt=""
  />
  <div class="p-5">
    <h5
      class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
      {title}
    </h5>

    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span
          class={`px-2 py-1 text-xs font-medium rounded-full ${
            priority === "low"
              ? "bg-green-100 text-green-800"
              : priority === "medium"
                ? "bg-yellow-100 text-yellow-800"
                : "bg-red-100 text-red-800"
          }`}
        >
          {priority}
        </span>
        <span
          class={`px-2 py-1 text-xs font-medium rounded-full ${
            status === "open"
              ? "bg-blue-100 text-blue-800"
              : status === "in_progress"
                ? "bg-yellow-100 text-yellow-800"
                : "bg-green-100 text-green-800"
          }`}
        >
          {status}
        </span>
      </div>
    </div>
    <div class="flex items-center gap-2 pt-2">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        <strong class="text-yellow-300">Creado por:</strong>{" "}
        {createdBy}
      </p>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        <strong class="text-blue-300">Asignado a:</strong>
        {assignedTo}
      </p>
    </div>
  </div>
</article>

